<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Fragments.EventFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:alpha="100"
        android:background="@drawable/temp_activity_gradient">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Event App"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:weightSum="3">

        <EditText
            android:id="@+id/title_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/hint_color"
            android:gravity="center"
            android:hint="Title"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color" />

        <EditText
            android:id="@+id/location_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/hint_color"
            android:gravity="center"
            android:hint="Location"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color" />

        <EditText
            android:id="@+id/discription_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/hint_color"
            android:gravity="center"
            android:hint="Discription"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Start"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/event_start_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:weightSum="2">

            <TextView
                android:id="@+id/event_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_65sdp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/st_date"
                android:text="Start"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/event_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/st_time"
                android:text="Start"
                android:textColor="@color/text_color" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="End"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/event_end_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="2">

            <TextView
                android:id="@+id/event_end_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_65sdp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/st_date"
                android:text="End"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/event_end_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:drawableEnd="@drawable/st_time"
                android:text="End"
                android:textColor="@color/text_color" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/btn_create_event"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_events_slc"
                    >

                <ImageView
                    android:id="@+id/crop"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/add_event" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_crop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Add Event"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/purple" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_event_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_events_slc"
                    >
                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/my_event_list" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="My Events"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/purple" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_joined_event"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_events_slc"
                    >

                <ImageView
                    android:id="@+id/stitch"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/join_event_list" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_stitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Joined Events"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/purple" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
